<h1>Create a review</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>
    <% f.input :restaurant, collection: Restaurant.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
